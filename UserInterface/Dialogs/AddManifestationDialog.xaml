<Window x:Class="HCI_2016_Project.UserInterface.Dialogs.AddManifestationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:HCI_2016_Project.Properties"
        Title="AddManifestationDialog" Height="300" Width="300">
    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Grid Name="Information" Grid.ColumnSpan="3" Background="#EEEEEE">
            <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Source="C:\Users\DMG\Desktop\info.png" Width="64" Margin="8,8,8,8"></Image>
            <TextBlock Grid.Column="2" TextWrapping="Wrap" Padding="8,8,8,8" Foreground="#34495E" TextAlignment="Center" FontSize="11pt">
                Ovo je dijalog za unos manifestacije. Potrebno je unijeti sve podatke osim ikonice manifestacije koja nije obavezna. 
            </TextBlock>
        </Grid>

        <Label Grid.Row="1" >Name:</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,5" />
        <Label Grid.Row="2" >E-mail:</Label>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,5" />
        <Label Grid.Row="3">Comment:</Label>
        <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" />

        <Button Grid.Row="4" Grid.Column="1" Margin="0,2,2,0" Padding="4,4,4,4">Sačuvaj</Button>
        <Button Grid.Row="4" Grid.Column="2" Margin="2,2,0,0" Padding="4,4,4,4">Odustani</Button>
    </Grid>
</Window>

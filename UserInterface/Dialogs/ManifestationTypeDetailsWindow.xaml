<Window x:Class="HCI_2016_Project.UserInterface.Dialogs.ManifestationTypeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManifestationTypeDetailsWindow" Height="300" Width="300">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Image Source="{Binding ManifestationType.IconSrc}" Width="96" Height="96"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Path=ManifestationType.Label }"/>
                <TextBlock Text="{Binding Path=ManifestationType.Name }"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <TextBlock Text="{Binding Path=ManifestationType.Description}"/>
        </Grid>

    </Grid>
</Window>
